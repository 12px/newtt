{
  "name": "Tabbi",
  "version": "0.0.1",
  "description": "Bookmarks, Front And Center",
  "manifest_version": 2,

  "icons": {
    "128": "icon.png"
  },

  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },

  "page_action": {
    "default_popup": "app/index.html?popup=true",
    "default_icon": {
      "128": "icon.png"
    }
  },

  "permissions": [ "tabs", "identity", "declarativeContent", "storage" ],

  "chrome_url_overrides": {
    "newtab": "app/index.html"
  },

  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",

  "oauth2": {
    "client_id": "645077009967-98p3d9s3r8rnedjvpkbj32mbtildsc7o.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.appdata"
    ]
  }

}
